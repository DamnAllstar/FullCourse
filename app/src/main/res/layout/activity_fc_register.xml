
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    tools:context="com.example.chonlaphoom.fullcourse.FCRegister"
    android:id="@+id/reg"
    android:background="#fff">

    <ImageView
        android:id="@+id/head"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ADD FULLCOURSE"
        android:layout_gravity="right|top"/>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:inputType="textPersonName"
            android:id="@+id/linearLayout3"
            android:hint="Display name"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="92dp"
            >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FULLCOURSE Name"
            android:id="@+id/textNameFulcourae"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            style="@style/editText4"
            />
            <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="your fullcourse name"
            android:id="@+id/nameFc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/editText2"
            android:paddingLeft="10dp"
            android:background="#ff7d7f7d"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="APPETIZER"
                android:id="@+id/textView2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                style="@style/editText4"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rappe"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/editText2"
                android:background="#ffe1e4e1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="FIsh Dish"
                android:id="@+id/textView7"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                style="@style/editText4"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rfish"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#ffe1e4e1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Meat Dish"
                android:id="@+id/textView8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                style="@style/editText4"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rmeat"
                android:layout_marginRight="10dp"
                style="@style/editText2"
                android:layout_marginLeft="10dp"
                android:background="#ffe1e4e1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Main Dish"
                android:id="@+id/textView10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                style="@style/editText4"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rmain"
                android:layout_marginRight="10dp"
                style="@style/editText2"
                android:layout_marginLeft="10dp"
                android:background="#ffe1e4e1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Salad"
                android:id="@+id/textView11"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                style="@style/editText4"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rsalad"
                android:layout_marginRight="10dp"
                style="@style/editText2"
                android:layout_marginLeft="10dp"
                android:background="#ffe1e4e1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Dessert"
                android:id="@+id/textView12"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                style="@style/editText4"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Rdessert"
                android:layout_marginRight="10dp"
                style="@style/editText2"
                android:layout_marginLeft="10dp"
                android:background="#ffe1e4e1"/>



        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD FULLCOURSE"
        android:textColor="#00BFA5"
        android:id="@+id/textRegist"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="13pt"/>
    <ImageButton
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
