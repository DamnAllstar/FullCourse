<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chonlaphoom.fullcourse.NewsFeed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageButton
            android:id="@+id/tabPopular"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:background="@drawable/tab_1"/>
        <ImageButton
            android:id="@+id/tabRecently"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tabPopular"
            android:background="@drawable/tab_1"/>
        <ImageButton
            android:id="@+id/tabAroundYou"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tabRecently"
            android:background="@drawable/tab_1"/>
        <ImageButton
            android:id="@+id/tabLowCost"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tabAroundYou"
            android:background="@drawable/tab_1"/>
    </LinearLayout>

    <GridView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"/>

    <TextView android:id="@android:id/empty" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />

</FrameLayout>
