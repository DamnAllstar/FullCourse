<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chonlaphoom.fullcourse.NewsFeed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/relateTabPopular">

            <ImageButton
                android:id="@+id/tabPopular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_7"/>
            <TextView
                android:id="@+id/textPopular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Popular"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center"

                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/com_facebook_share_button_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/relateTabRecently"
            android:layout_toRightOf="@+id/relateTabPopular">

            <ImageButton
                android:id="@+id/tabRecently"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_3"/>
            <TextView
                android:id="@+id/textRecently"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Recently"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center"

                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/com_facebook_share_button_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/relateTabAroundYou"
            android:layout_toRightOf="@+id/relateTabRecently">

            <ImageButton
                android:id="@+id/tabAroundYou"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_3"/>
            <TextView
                android:id="@+id/textAroundYou"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/AroundYou"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center"

                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/com_facebook_share_button_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/relateTabLowCost"
            android:layout_toRightOf="@+id/relateTabAroundYou">

            <ImageButton
                android:id="@+id/tabLowCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_3"/>
            <TextView
                android:id="@+id/textLowCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/LowCost"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center"

                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/com_facebook_share_button_text_color"/>
        </RelativeLayout>


    </LinearLayout>

    <GridView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"/>


</FrameLayout>
