<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:id="@+id/FullCourse"
    android:background="@drawable/back_10">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="350dp"
                  android:layout_height="45dp"

                  android:layout_marginTop="100dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_below="@+id/imageView4"
                  android:id="@+id/linearLayout"
                  android:layout_centerHorizontal="true">

        <ImageView
            style="@style/editText"
            android:id="@+id/pae1"
            android:src="@drawable/lock"
            android:layout_height="match_parent"
            android:layout_width="45dp"
            />

        <EditText

            android:id="@+id/editText"
            android:inputType="textPassword"
            android:ems="15"
            android:hint="Password "
            android:layout_marginRight="8dp"
            style="@style/editText"
            android:layout_height="match_parent"
            android:layout_width="305dp"

            />





    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="350dp"
                  android:layout_height="45dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"

                  android:layout_marginTop="200dp"
                  android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/pae3"
            style="@style/editText"
            android:src="@drawable/username"
            android:layout_height="match_parent"
            android:layout_width="45dp"

            />

        <EditText

            android:id="@+id/editText2"
            android:inputType="textEmailAddress"
            android:ems="15"
            android:hint="User Name "
            android:layout_marginRight="8dp"

            style="@style/editText"
            android:layout_height="match_parent"
            android:layout_width="305dp"
            android:textColorHighlight="#fff">
            <requestFocus/>
        </EditText>





    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="400dp"
                  android:layout_height="45dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="170dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/imageView4"
                  android:id="@+id/linearLayout2">


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="400dp"
                  android:layout_height="45dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginTop="300dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/imageView4">


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="400dp"
                  android:layout_height="45dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginBottom="50dp"
                  android:layout_centerHorizontal="true"
                  >


    </LinearLayout>







    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/fc"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/MP"
        android:layout_centerHorizontal="true"/>







    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/MP"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KAK"
        android:id="@+id/KAK"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>

    <ImageButton
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:id="@+id/btnStartAnotherActivity2"
        android:background="@drawable/signup_1"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"/>

    <ImageButton
    android:layout_width="350dp"
    android:layout_height="45dp"
    android:id="@+id/btnStartAnotherActivity"
    android:background="@drawable/login_1"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/linearLayout"
    android:layout_centerHorizontal="true"/>


</RelativeLayout>

