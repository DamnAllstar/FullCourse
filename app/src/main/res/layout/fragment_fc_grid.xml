<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chonlaphoom.fullcourse.FCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/tabPopular"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_7"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/picpro"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:background="@drawable/profile_pic"
            android:layout_centerHorizontal="true"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pae A-Lonely Boy"
            style="@style/editText2"/>


    </LinearLayout>




    <GridView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"/>

    <TextView android:id="@+id/add" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />


</FrameLayout>
